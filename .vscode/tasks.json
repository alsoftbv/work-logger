{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "build"
            ],
            "group": "build",
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf build/*",
            "group": "none"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build build",
            "group": "build",
            "dependsOn": [
                "Configure CMake"
            ]
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "dependsOn": [
                "Clean",
                "Configure CMake",
                "Build"
            ],
            "dependsOrder": "sequence",
            "group": "build"
        }
    ]
}