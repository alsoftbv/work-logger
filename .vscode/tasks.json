{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "build",
                "-DBUILD_TESTING=OFF"
            ],
            "hide": true
        },
        {
            "label": "configure-tests",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "build",
                "-DBUILD_TESTING=ON"
            ],
            "hide": true
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build/*",
            "hide": true
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build",
            "group": "build",
            "dependsOn": [
                "configure"
            ]
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "cmake --build build",
            "group": "build",
            "dependsOn": [
                "clean",
                "configure"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "install",
            "type": "shell",
            "command": "mkdir -p $HOME/.local/bin && cp ${workspaceFolder}/build/app/wlog $HOME/.local/bin/wlog && chmod +x $HOME/.local/bin/wlog",
            "group": "build",
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cmake --build build && ctest --test-dir build --output-on-failure",
            "group": "test",
            "dependsOn": [
                "configure-tests"
            ]
        }
    ]
}